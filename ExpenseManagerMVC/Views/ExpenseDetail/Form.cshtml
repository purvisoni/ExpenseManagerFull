@model ExpenseDetailViewModel;

@{
    string pageTitle = "New Expense";
    string action = "AddExpense";

    if (ViewBag.IsEditing == true) {
        // Editing
        pageTitle = "Update Expense";
        action = "UpdateExpense";
    }
}
<div>
    <h2>@pageTitle</h2>
    <hr/>
    <div>
        <form asp-action="@action">
            @{
                if(action == "UpdateExpense")
                {<input type="hidden" asp-for="ItemId"/>}
            }
            
            <div class="form-group">
                <label asp-for="StoreName">Store Name</label>
                <input type="text" class="form-control" asp-for="StoreName">
                <span class="text-danger" asp-validation-for="StoreName"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ItemName">Item Name</label>
                <input type="text" class="form-control" asp-for="ItemName">
                <span class="text-danger" asp-validation-for="ItemName"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input type="text" class="form-control" asp-for="Amount">
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpenseDate">ExpenseDate</label>
                <input type="datetime-local" class="form-control" asp-for="ExpenseDate">
                <span class="text-danger" asp-validation-for="ExpenseDate"></span>
            </div>

            <div class="form-group">
                <label asp-for="Category">Category</label>
                <input type="text" class="form-control" asp-for="Category">
                <span class="text-danger" asp-validation-for="Category"></span>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>